<div class="row">
	<div class="col-lg-12">	
		<% flash.each do |key, value| %>
      <!-- <div class="alert alert-<%= key %>"><%= value %></div> -->
			<div class="alert <%= class_alert(key)%>" role="alert">
				<svg class="<%= icon_alert(key)%>">
					<use xlink:href="<%= icon_href_alert(key)%>"></use>
				</svg> <%= value %>
				<a class="pull-right notification">
					<span class="glyphicon glyphicon-remove"></span>
				</a>
			</div>
   <% end %>	
	</div>
</div><!--/.row-->		
